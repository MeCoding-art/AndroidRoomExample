<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.UpdateNoteActivity"
android:background="@color/background_color"
>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="@drawable/et_background"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="sdfvsfv"
        android:textColor="@color/app_color"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:paddingStart="5dp"
        android:background="@drawable/et_background"
        />

    <EditText
        android:id="@+id/etSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sub-title"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:paddingStart="5dp"
        android:background="@drawable/et_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/ivGreen"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="4dp"
            android:background="@drawable/green_oval"
            android:layout_marginStart="16dp"
            />

        <ImageView
            android:id="@+id/ivYellow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="4dp"
            android:background="@drawable/yellow_oval"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/ivRed"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="4dp"
            android:background="@drawable/red_oval"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="title"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:paddingStart="5dp"
        android:background="@drawable/et_background"
        android:gravity="start"
        />

</LinearLayout>

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fbUpdateNote"
    android:layout_width="54dp"
    android:layout_height="54dp"
    android:layout_marginBottom="50dp"
    android:layout_marginRight="54dp"
    android:backgroundTint="#205273"
    android:src="@drawable/ok"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>